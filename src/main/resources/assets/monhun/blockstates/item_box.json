{
  "multipart": [
    {
      "when": {
        "facing": "north"
      },
      "apply": {
        "model": "monhun:block/item_box"
      }
    },
    {
      "when": {
        "facing": "east"
      },
      "apply": {
        "model": "monhun:block/item_box",
        "y": 90
      }
    },
    {
      "when": {
        "facing": "south"
      },
      "apply": {
        "model": "monhun:block/item_box",
        "y": 180
      }
    },
    {
      "when": {
        "facing": "west"
      },
      "apply": {
        "model": "monhun:block/item_box",
        "y": 270
      }
    }
  ]
}
